<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SharpCasts.ViewModels"
             x:Class="SharpCasts.Views.MainPage">

    <ContentPage.BindingContext>
        <vm:MainPageViewmodel/>
    </ContentPage.BindingContext>

    <RefreshView Command="{Binding RefreshCommand}"
                 IsRefreshing="{Binding IsBusy}">
        
        <ScrollView>
            <VerticalStackLayout>
                <VerticalStackLayout BackgroundColor="BlueViolet">
                    <Label Text="here are your podcasts" TextColor="White"
                           FontSize="Title" SemanticProperties.HeadingLevel="Level1"
                           Padding="32" HorizontalOptions="Center"/>

                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </RefreshView>
 
</ContentPage>
