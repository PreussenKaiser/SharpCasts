<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SharpCasts.Main.ViewModels"
             x:Class="SharpCasts.Main.Views.MainPage">

    <RefreshView Command="{Binding RefreshCommand}"
                 IsRefreshing="{Binding IsBusy}"
                 WidthRequest="1200">

        <ScrollView>
            <VerticalStackLayout>
                <StackLayout BackgroundColor="{StaticResource Primary}">
                    <Label Text="Here are your podcasts" TextColor="White"
                           FontSize="Title" SemanticProperties.HeadingLevel="Level1"
                           Padding="32" HorizontalOptions="Center"/>

                </StackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </RefreshView>
 
</ContentPage>
